package app;

import model.Refrigerator.Builder;

public class App 
{
	private final FileHandler fileHandler;
	private final ApplianceService applianceService;
	private final Ui ui;
	

	private App(Builder builder)
	{
		this.applianceService = builder.applianceService;
		this.fileHandler = builder.fileHandler;
		this.ui = builder.ui;
	}
	
	public static class Builder
	{
		public App build()
		{
			return new App(this);
		}
		
		public Builder ui(Ui ui)
		{
			this.ui = ui;
			return this;
		}
		
		public Builder fileHandler(FileHandle fileHandler)
		{
			this.fileHandler = fileHandler;
		}
		
		public Builder applianceService(ApplianceService applianceService)
		{
			this.applianceService = applianceService;
		}
	}
}
