package app;

import service.*;
import ui.*;

public class Main {
    public static void main(String[] args) {
        try {
            // Initialize the Ui
            Ui ui = new ConsoleUi();

            // Initialize the FileHandler
            String resourceName = "appliances.txt"; // Ensure this file exists in your resource directory
            String localDir = System.getProperty("user.dir") + "/data"; // Local writable directory
            FileHandler fileHandler = new FileHandler(resourceName, localDir);

            // Initialize the ApplianceService
            ApplianceService applianceService = new ApplianceService(fileHandler);

            // Initialize and run the App
            App app = new App(ui, applianceService);
            app.run();

        } catch (Exception e) {
            System.err.println("An error occurred: " + e.getMessage());
            e.printStackTrace();
        }
    }
}
